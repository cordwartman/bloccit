<div class="media">
  <% avatar_url = post.user.avatar_url(48) %>
  <% if avatar_url %>
    <div class="media-left line-up">
      <%= image_tag avatar_url, class: 'media-object' %>
     </div>
  <% end %>
  <div class="media-body line-up">
    <h4 class="media-heading">
      <%= link_to post.title, topic_post_path(post.topic, favorite) %>
    </h4>
    <small>
      <%= post.points %> Votes
    </small>
    <small>
      <%= post.comments.count %> Comments
    </small>
  </div>
</div>